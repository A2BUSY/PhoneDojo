<% layout('base') %>

<div class="container">
  <div class="row">
    <div class="col-6">
      <h1 class="text-center"><%= phone.name %></h1>
      
      <img src="https://assets.swappie.com/cdn-cgi/image/width=600,height=600,fit=contain,format=auto/swappie-iphone-xr-red.png?v=13" alt="phone">
      
      <table class="table table-hover table-bordered">
          <tbody>
            <tr>
              <th scope="row">Memory</th>
              <td><%= phone.memory %> GB</td>
            </tr>
            <tr>
              <th scope="row">Storage</th>
              <td><%= phone.storage %> GB</td>
            </tr>
            <tr>
              <th scope="row">Processor</th>
              <td><%= phone.processor %></td>
            </tr>
            <tr>
              <th scope="row">Display size</th>
              <td><%= phone.displaySize %> inches</td>
            </tr>
            <tr>
              <th scope="row">Weight</th>
              <td><%= phone.weight %>g</td>
            </tr>
            <tr>
              <th scope="row">Colour</th>
              <td><%= phone.colour %></td>
            </tr>
            <tr>
              <th scope="row">Available</th>
              <td><%= phone.available %></td>
            </tr>
            <tr>
              <th scope="row">Created by</th>
              <td><%= phone.user.username %></td>
            </tr>
          </tbody>
      </table>
      <% if (user && phone.user._id.equals(user._id)) { %>
        <div class="d-flex justify-content-center align-items-center">
          <div>
            <a href="/phones/<%= phone._id %>/edit" class="btn btn-primary">Edit</a>
          </div>
          <div class="ms-5">
            <form action="/phones/<%= phone._id %>?_method=DELETE" method="post">
                <button class="btn btn-danger">Delete</button>
            </form>
          </div>
        </div>
      <% } %>

    </div>
    <div class="col-6">
      <div>
        <h2 class="text-center">Leave a Review</h2>
        <form action="/phones/<%= phone._id %>/reviews" class="p-3 needs-validation" method="post" novalidate>
          <div class="mb-3">
            <label for="rating" class="form-label">Rating</label>
            <input class="form-range" type="range" name="rating" id="rating" min="0" max="5" required>
          </div>
          
          <div>
            <label class="form-label" for="body">Review</label>
            <textarea class="form-control" name="body" id="body" cols="100" rows="5" required></textarea>
          </div>
      
          <button class="btn btn-success mt-3">Submit</button>
        </form>
      </div>
      
      <div class="mt-3">
        <h2 class="text-center mb-3">Reviews</h2>
        <% for(let review of phone.reviews) { %>
          <div class="card mb-4">
            <div class="card-body">
              <h5 class="card-title">Rating: <%= review.rating %></h5>
              <p class="card-text"><%= review.body %></p>
              <form action="/phones/<%= phone._id %>/reviews/<%= review._id %>?_method=DELETE" method="post">
                <button class="btn btn-sm btn-danger">Delete</button>
              </form>
            </div>
          </div>
        <% } %>
      </div>
    </div>
    
    
  </div>
</div>
