<% layout('base') %> 
<h1>Phones</h1>

<div class="row gap-3 mb-4">
    <% for(let p of phones) { %>
        <div class="col">
            <div class="card mb-5 mt-4 p-2" style="width: 18rem;">
                <img src="https://assets.swappie.com/cdn-cgi/image/width=600,height=600,fit=contain,format=auto/swappie-iphone-xr-red.png?v=13" class="card-img-top" alt="phone">
                <div class="card-body d-flex flex-column justify-content-center align-items-center">
                    <h5 class="card-title"><%= p.name %></h5>
                    <p class="card-text">Some quick example text to build on the card title and make up the bulk of the card's content.</p>
                    <a href="/phones/<%= p._id %>" class="text-center btn btn-dark">View</a>
                </div>
            </div>
        </div>
    <% } %>
</div>

<a href="/phones/new" class="btn btn-dark">Add a new phone</a>
