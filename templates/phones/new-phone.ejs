<% layout('base') %> 
<h1>Create new phone</h1>

<form action="/phones" method="post" class="row g-2 needs-validation" novalidate>
    <div class="row g-2">
        <div class="col-md-4">
            <label for="name" class="form-label">Name:</label>
            <input type="text" name="name" id="name" required class="form-control">
        </div>
    </div>

    <div class="row g-2">
        <div class="col-md-4">
            <label for="memory" class="form-label">Memory(RAM):</label>
            <select name="memory" id="memory" required class="form-select">
                <option value="2">2</option>
                <option value="4">4</option>
                <option value="8">8</option>
                <option value="16">16</option>
                <option value="32">32</option>
                <option value="64">64</option>
            </select>
        </div>

        <div class="col-md-4">
            <label for="storage" class="form-label">Stroage:</label>
            <select name="storage" id="storage" required class="form-select">
                <option value="2">2</option>
                <option value="4">4</option>
                <option value="8">8</option>
                <option value="16">16</option>
                <option value="32">32</option>
                <option value="64">64</option>
                <option value="128">128</option>
                <option value="256">256</option>
                <option value="512">512</option>
            </select>
        </div>
    </div>

    <div class="row g-2">
        <div class="col-4">
            <label for="processor" class="form-label">Processor:</label>
            <input type="text" name="processor" id="processor" required class="form-control">
        </div>

        <div class="col-md-4">
            <label for="display" class="form-label">Display Size:</label>
            <input type="number" name="displaySize" id="display" step="any" required class="form-control">
        </div>
    </div>
    
    <div class="row g-2">
        <div class="col-md-4">
            <label for="weight" class="form-label">Weight(grams):</label>
            <input type="number" name="weight" id="weight" step="any" class="form-control">
        </div>

        <div class="col-md-4">
            <label for="colour" class="form-label">Colour:</label>
            <input type="text" name="colour" id="colour" class="form-control">
        </div>
    </div>

    <div class="row g-2">
        <div class="col-4">
            <div class="form-check">
                <input type="checkbox" name="available" id="available" class="form-check-input">
                <label for="available" class="form-check-label">Available</label>
            </div>
        </div>
    </div>

    <div class="row g-2">
        <div class="col-12">
            <button class="btn btn-dark">Submit</button>
        </div>
    </div>
</form>